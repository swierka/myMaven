<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="fileReader" class="pl.notify.reader.FileNotificationReader"></bean>
    <bean id="emailSender" class="pl.notify.sender.EmailNotificationSender"></bean>
    <bean id ="consoleLogger" class ="pl.notify.logger.ConsoleLogger"></bean>
    <bean id="facade" class="pl.notify.app.NotificationFacade">
        <constructor-arg ref="fileReader"/>
        <constructor-arg ref="emailSender"/>
        <constructor-arg ref="consoleLogger"/>
    </bean>

</beans>